<launch>
 	<param name="/use_sim_time" value="true" />
 	<!-- Lance stage -->
 	<node pkg='stage_ros' type='stageros' name='stage' args="-d $(find stage_ros)/world/willow-erratic.world" />
 	
	<!-- Lance le teleop keyboard -->
	<node pkg="turtlebot_teleop" type="turtlebot_teleop_key" name="turtlebot_teleop_keyboard" output="screen">
		<param name="scale_linear" value="0.5" type="double" />
		<param name="scale_angular" value="1.5" type="double" />
		<remap from="turtlebot_teleop_keyboard/cmd_vel" to="cmd_vel" />
	</node>

	<!-- Lance rviz -->
	<node type="rviz" name="rviz" pkg="rviz" args="-d $(find stage_ros)/rviz/stage.rviz" />

<!-- 	<node pkg="rosbag" type="play" name="rec_data" args="-_clock /home/eloi/catkin_ws/src/LARM1/grp-cyan/bagfiles/challenge-2.bag" />
 -->	<!-- Lance le GMAPPING -->
	<node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" args="scan:base_scan"  />
</launch>